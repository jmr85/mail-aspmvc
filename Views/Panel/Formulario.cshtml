@model PracticaMailMVC.Models.EmailFormModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Formulario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="jumbotron text-center">
            <h1>Enviar Mail</h1>
        </div>


        @using (Html.BeginForm("Enviar", "Panel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
           
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FromEmail,"", new { @class = "bg-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromSubject, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <br />
                    @Html.TextBoxFor(m => m.FromSubject, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromSubject, "", new { @class = "bg-warning" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                <div class="col-md-10 editor">
                    <br />
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message, "", new { @class = "bg-warning" })
                    
                </div>
                
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="submit" class="btn btn-primary" value="Enviar" />
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
	tinymce.init({ selector: 'textarea' });
    </script>

</body>
</html>
